<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org"
      xmlns:layout="http://www.ultraq.net.nz/thymeleaf/layout"
      layout:decorate="~{layout-nickelfox}">

<head>
    <title>Familias de Productos - Sistema de Ventas</title>
</head>

<body>
<div layout:fragment="content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h3 mb-1">Familias de Productos</h2>
            <p class="text-muted mb-0">Gestiona las familias de productos del sistema</p>
        </div>
        <a th:href="@{/prodfamilias/nueva}" class="btn btn-primary-custom">
            <i class="fas fa-sitemap me-2"></i>Nueva Familia
        </a>
    </div>

    <div class="card-custom">
        <div class="card-header-custom">
            <h5 class="card-title">Catálogo de Familias</h5>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-filter me-1"></i>Filtrar
                </button>
                <button class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-download me-1"></i>Exportar
                </button>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table id="familiasTable" class="table table-sm table-custom" style="width:100%">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Estatus</th>
                            <th>Fecha Alta</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr th:each="prodFamilia : ${prodFamilias}" th:id="'familia-' + ${prodFamilia.id}">
                            <td th:text="${prodFamilia.id}"></td>
                            <td>
                                <span class="badge bg-secondary" th:text="${prodFamilia.codigo}"></span>
                            </td>
                            <td>
                                <strong th:text="${prodFamilia.nombre}"></strong>
                            </td>
                            <td th:text="${prodFamilia.descripcion ?: 'Sin descripción'}"></td>
                            <td>
                                <span class="badge" 
                                      th:classappend="${prodFamilia.estatus == 'ACTIVO'} ? 'bg-success' : 'bg-danger'"
                                      th:text="${prodFamilia.estatus}">
                                </span>
                            </td>
                            <td th:text="${#temporals.format(prodFamilia.fechaAlta, 'dd/MM/yyyy HH:mm')}"></td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <!-- Botón Editar -->
                                    <a th:href="@{/prodfamilias/editar/{id}(id=${prodFamilia.id})}" 
                                       class="btn btn-outline-primary" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    
                                    <!-- Botón Activar/Desactivar -->
                                    <button th:if="${prodFamilia.estatus == 'ACTIVO'}"
                                            class="btn btn-outline-warning btn-toggle-status"
                                            title="Desactivar"
                                            th:data-id="${prodFamilia.id}"
                                            th:data-nombre="${prodFamilia.nombre}"
                                            data-action="desactivar">
                                        <i class="fas fa-toggle-off"></i>
                                    </button>
                                    
                                    <button th:if="${prodFamilia.estatus == 'INACTIVO'}"
                                            class="btn btn-outline-success btn-toggle-status"
                                            title="Activar"
                                            th:data-id="${prodFamilia.id}"
                                            th:data-nombre="${prodFamilia.nombre}"
                                            data-action="activar">
                                        <i class="fas fa-toggle-on"></i>
                                    </button>
                                    
                                    <!-- Botón Eliminar -->
                                    <button class="btn btn-outline-danger btn-delete" 
                                            title="Eliminar"
                                            th:data-id="${prodFamilia.id}"
                                            th:data-nombre="${prodFamilia.nombre}">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

    <th:block layout:fragment="scripts">
        <script th:inline="none">
            $(document).ready(function() {
                // Inicializar DataTable con preset para familias
                initializeDataTableWithPreset('#familiasTable', 'familias', {
                    language: {
                        search: 'Buscar familias:',
                        lengthMenu: 'Mostrar _MENU_ familias por página',
                        info: 'Mostrando _START_ a _END_ de _TOTAL_ familias',
                        infoEmpty: 'No hay familias para mostrar',
                        infoFiltered: '(filtrado de _MAX_ familias totales)',
                        zeroRecords: 'No se encontraron familias que coincidan con la búsqueda',
                        emptyTable: 'No hay familias registradas en el sistema'
                    }
                });            // Función para mostrar mensajes Toast
            function showToast(message, type = 'success') {
                const toast = $('<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">')
                    .append($('<div class="toast-header bg-' + type + ' text-white">')
                        .append('<i class="fas fa-' + (type === 'success' ? 'check-circle' : 'exclamation-circle') + ' me-2"></i>')
                        .append('<strong class="me-auto">' + (type === 'success' ? 'Éxito' : 'Error') + '</strong>')
                        .append('<button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>'))
                    .append($('<div class="toast-body">').text(message));
                
                $('.toast-container').append(toast);
                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();
                
                toast.on('hidden.bs.toast', function() {
                    $(this).remove();
                });
            }

            // Manejador de cambio de estatus
            $('.btn-toggle-status').on('click', function() {
                const button = $(this);
                const id = button.data('id');
                const nombre = button.data('nombre');
                const action = button.data('action');
                const message = `¿Estás seguro de ${action} la familia "${nombre}"?`;
                
                if (confirm(message)) {
                    $.post(`/prodfamilias/${action}/${id}`)
                        .done(function(response) {
                            showToast(response.message || 'Operación exitosa');
                            setTimeout(() => window.location.reload(), 1000);
                        })
                        .fail(function(xhr) {
                            showToast(xhr.responseJSON?.message || 'Error al procesar la solicitud', 'danger');
                        });
                }
            });

            // Manejador de eliminación
            $('.btn-delete').on('click', function() {
                const button = $(this);
                const id = button.data('id');
                const nombre = button.data('nombre');
                
                if (confirm(`¿Estás seguro de eliminar la familia "${nombre}"?`)) {
                    $.post(`/prodfamilias/eliminar/${id}`)
                        .done(function(response) {
                            showToast(response.message || 'Familia eliminada exitosamente');
                            setTimeout(() => window.location.reload(), 1000);
                        })
                        .fail(function(xhr) {
                            showToast(xhr.responseJSON?.message || 'Error al eliminar la familia', 'danger');
                        });
                }
            });
        });
    </script>
</div>

<!-- Toast Container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3"></div>
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                <p>No hay familias de productos registradas</p>
                                <a th:href="@{/prodfamilias/nueva}" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Crear Primera Familia
                                </a>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <!-- Formularios ocultos para acciones -->
    <form id="desactivarForm" method="post" style="display: none;">
        <input type="hidden" name="_method" value="post">
    </form>

    <form id="activarForm" method="post" style="display: none;">
        <input type="hidden" name="_method" value="post">
    </form>

    <form id="eliminarForm" method="get" style="display: none;">
    </form>
</div>

<div layout:fragment="scripts">
    <script>
        $(document).ready(function() {
            // Inicializar DataTable
            $('#prodFamiliasTable').DataTable({
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                },
                order: [[1, 'asc']], // Ordenar por código
                columnDefs: [
                    { targets: [-1], orderable: false } // Deshabilitar ordenamiento en acciones
                ]
            });
        });

        function confirmarDesactivar(id, nombre) {
            if (confirm('¿Está seguro de desactivar la familia "' + nombre + '"?')) {
                const form = document.getElementById('desactivarForm');
                form.action = '/prodfamilias/desactivar/' + id;
                form.submit();
            }
        }

        function confirmarActivar(id, nombre) {
            if (confirm('¿Está seguro de activar la familia "' + nombre + '"?')) {
                const form = document.getElementById('activarForm');
                form.action = '/prodfamilias/activar/' + id;
                form.submit();
            }
        }

        function confirmarEliminar(id, nombre) {
            if (confirm('¿Está seguro de eliminar la familia "' + nombre + '"?\n\nEsta acción no se puede deshacer.')) {
                const form = document.getElementById('eliminarForm');
                form.action = '/prodfamilias/eliminar/' + id;
                form.submit();
            }
        }
    </script>
</div>
</body>
</html>
